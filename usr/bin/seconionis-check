#!/bin/bash

# Check if seconionis-mate is already running
if pgrep -f "python3.*securonis-mate" > /dev/null; then
    # If it's already running, just focus the window if possible
    # This uses wmctrl if available to focus the window
    if command -v wmctrl > /dev/null; then
        wmctrl -a "Seconionis" 2>/dev/null
    fi
    
    # Exit without starting a new instance
    echo "seconionis-mate is already running"
    exit 0
else
    # If not running, start it
    exec seconionis-mate
fi
